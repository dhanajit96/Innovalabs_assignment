<div class="contentbar">                
    <!-- Start row -->
    <div class="row align-items-end">

        <div class="col-lg-11 d-flex justify-content-end align-items-end">
            <a class="btn btn-primary mr-2" href="blogs/new">Write Blog</a>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <form action="/logins/x" method="post" id="logout-form">
                <input type="hidden" name="_method" value="delete">
                <input type="submit" value="Logout" class="btn btn-danger">
            </form>
        </div>
    </div>
    
    <div class="row mt-4">
        <!-- Start col -->
        <div class="col-lg-12">
            <div class="card m-b-30">
                <div class="card-header">
                    <h5 class="card-title">Blogs Table</h5>
                </div>
                <div class="card-body">
                   
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Title</th>
                                    <th scope="col">Passage</th>
                                    <th scope="col">Author</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @all_blogs.each do |blog|%>
                                <tr>
                                    <td><%= blog.title %></td>
                                    <td><%= blog.body %></td>
                                    <td><%= blog.author %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End row -->
</div>