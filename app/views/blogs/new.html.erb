<div class="container">
    <div class="row">
        <div class="col-8 justify-content-center">

            <h3>Form for Creating Blogs</h3>
            <form action="/blogs" method="post">
                <div class="form-group">
                    <label for="inputTitle">Title</label>
                    <input type="text" class="form-control" id="inputTitle" name="blog[title]" placeholder="Title"
                        required>
                </div>
                <div class="form-group">
                    <label for="inputBody">Body</label>
                    <textarea class="form-control" id="inputBody" name="blog[body]" placeholder="Body" rows="5"
                        required></textarea>
                </div>
                <div class="form-group">
                    <label for="inputAuthor">Author</label>
                    <input type="text" class="form-control" id="inputAuthor" name="blog[author]" placeholder="Author"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create Blog</button>
                </div>
            </form>
        </div>
    </div>
</div>